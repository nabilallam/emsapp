<table class='table table-striped table-hover table-condensed'>
  <head>
    <tr>
      <th>Sektor</th>
      <th>Resource</th>
      <th>Bezeichnung</th>
      <th>Verbrauchsort</th>
      <th>Menge</th>
      <th>Zeitraum</th>
      <th></th>
    </tr>
  </head>
  <body>
    <% @consumptions.each do |consumption| %>
      <% p consumption %>
      <tr>
        <td><%= consumption.use_sector.name%></td>
        <td><%= consumption.resource.name%></td>
        <td><%= consumption.name %></td>
        <td><%= consumption.location.name if consumption.location %></td>
        <td><%= "#{consumption.amount.round(2)} #{consumption.resource.unit}" %></td>
        <td><%= "#{consumption.ts_begin ? consumption.ts_begin.strftime('%d.%m.%Y') : '-'} - #{consumption.ts_end ? consumption.ts_end.strftime('%d.%m.%Y') : '-'}" %></td>
        <td><%= link_to 'edit', edit_customer_consumption_path(@current_user.customer_id, consumption, use_sector_id: consumption.use_sector_id) %></td>
      </tr>
    <% end %>
  </body>
</table>
