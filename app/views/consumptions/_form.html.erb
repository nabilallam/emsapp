<h3>Sector: <%= @consumption.use_sector.name %></h3>
  <%= f.hidden_field :use_sector_id %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :amount %>
    <%= f.text_field :amount, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :resource_id %>
    <%= collection_select :consumption, :resource_id, @resources, :id, :name,{}, prompt: 'Select Resource', class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :location_id %>
    <%= collection_select :consumption, :location_id, @locations, :id, :name,{}, prompt: 'Select Resource', class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :effective_date %>
    <%= f.text_field :effective_date, as: :string, class: 'datetimepicker form-control',
      value: (consumption.try!(:effective_date).try!(:strftime, '%d.%m.%Y') || '') %>
  </div>

  <%= button_tag class: 'btn btn-primary' do %>
    <%= icon 'save' %>
    save
  <% end %>
